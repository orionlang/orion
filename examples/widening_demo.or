fn main() i64 {
    // Literals infer types from context
    var x: i8 = 100;
    var y: i16 = 1000;
    var z: i32 = 100000;

    // Widening conversions work for variables
    let a: i16 = x;    // i8 -> i16
    let b: i32 = y;    // i16 -> i32
    let c: i64 = z;    // i32 -> i64

    // Direct widening from i8 all the way to i64
    let result: i64 = x;

    return result
}
